<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookingService"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Service Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/design_default_color_primary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/bookingCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer: John Doe"
            android:layout_marginTop="4dp"
            android:textColor="?android:attr/textColorSecondary"/>

        <TextView
            android:id="@+id/bookingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Main St"
            android:layout_marginTop="2dp"
            android:textColor="?android:attr/textColorSecondary"/>

        <TextView
            android:id="@+id/bookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date: 12/12/2025 - 10:00 AM"
            app:drawableStartCompat="@android:drawable/ic_menu_my_calendar"
            android:drawablePadding="8dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>